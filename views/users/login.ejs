<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GetLaps</title>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
  <!-- MDB -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.0.0/mdb.min.css" rel="stylesheet" />
</head>

<body>

  <%- include('../partials/navbar') %>

    <style>
      .error {
        color: red;
        opacity: .5;
      }

    
    </style>
    <!-- background-image: url(/wallpaper/download.jpeg);background-size: cover;background-repeat: no-repeat; -->
    <section class="vh-100" style="background-color: #DEDEDE;">
      <div class="container py-5 h-100">
        <%if(signupAlert !="" ){%>
          <div class="alert alert-success alert-dismissible fade show" id="msg-alert" role="alert">
            <strong>SUCCESS!..</strong>
            <%=signupAlert%>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <%}%>
          <%if(blockErr !="" ){%>
            <div class="alert alert-danger alert-dismissible fade show" id="msg-alert" role="alert">
              <strong>FAILED!..</strong>
              <%=blockErr%>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <%}%>
            <div class="row d-flex justify-content-center align-items-center h-100">
              <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;opacity: .8;">
                  <div class="card-body p-5 text-center">


                    <h3 class="mb-5">Login</h3>
                    <form action="/login" method="post" id="formv">
                      <label class="form-label mb-3 error">
                        <%=loginErr%>
                      </label>
                      <div class="form-outline mb-4">
                        <input type="email" id="typeEmailX-2" class="form-control form-control-lg" name="email" />
                        <label class="form-label" for="typeEmailX-2">Email</label>
                      </div>

                      <div class="form-outline mb-4">
                        <input type="password" id="typePasswordX-2" class="form-control form-control-lg"
                          name="password" />
                        <label class="form-label" for="typePasswordX-2">Password</label>
                      </div>
                      <div style="margin-top: -20px;" class="d-flex justify-content-between align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">

                        </div>
                        <a href="/forgot-password" class="text-body">Forgot password?</a>
                      </div>


                      <!-- <div class="form-outline mb-4">
                <input type="number" id="typePasswordX-2rggr" class="form-control form-control-lg"name="mobile" />
                <label class="form-label" for="typePasswordX-2">Registered Mobile</label>
              </div> -->




                      <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
                      <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="/signup"
                          class="link-danger">Register</a></p>


                    </form>
                  </div>
                </div>
              </div>
            </div>
      </div>
    </section>
    <script>

      $(function () {

        // First: Add with default messages
        //$("#frm-add-data").validate();				

        // Second: Change default messages
        $("#formv").validate({
          rules: { // to define rules
            password: "required",
            email: "required",
            mobile: {
              required: true,
              maxlength: 10,
              minlength: 10
            }

          },
          messages: { // to define custom messages
            password: "Enter your name",
            email: "Enter your email",
            mobile: {
              required: "Enter Your Mobile Number",
              maxlength: "Maximum 10 Character Allowed",
              minlength: "Enter Atleat 10 Character"
            }

          },

          submitHandler: function (form) {
            if ($(form).valid())
              form.submit();
            return false; // prevent normal form posting
          }

        });
      });
    </script>
    <script>
      $("#msg-alert").fadeTo(2000, 500).slideUp(10, function(){
      $("#msg-alert").slideUp(10);
  });
  </script>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2"
      crossorigin="anonymous"></script>
    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.0.0/mdb.min.js"></script>
</body>

</html>