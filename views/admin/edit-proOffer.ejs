<%- include('../partials/admin-head') %>
<%- include('../partials/admin-sidebar') %>
<%- include('../partials/admin-navbar') %>






<section style="padding-bottom: 100px;">
    
   
</section>
<hr>
<section id="add" class="mb-5">
    <div class="half">
        <div class="bg order-1 order-md-2" style="background-image: url('/adminLogin/images/bg_1.jpg');"></div>

        <div class="contents order-2 order-md-1">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <div class="form-block" id="pro">
                                <div class="text-center mb-5">
                                    <h3>Product <strong>Offer</strong></h3>

                                </div>
                                <form action="/admin/edit-productOffer/<%=offer._id%>" id="productPage" method="post">
                                    <div class="form-group first" >
                                        <label for="proList " >Product List</label>
                                        <select name="proId" class="custom-select p-2" id="proSelect" required>
                                            <option value="empty"  selected>Choose a Product</option>
                                            <% products.forEach((x)=> { %>
                                            <option value="<%=x._id%>"> <%=x.title%> (MRP.<%=x.mrp%>)
                                            </option>
                                            <% }) %>
                                        </select>
                                        <!-- {{#if proErr}}
                                        <p class="text-center text-danger">{{proErr}}</p>
                                        {{/if}} -->
                                        <br>
                                        <label class="pt-4">Starting Date</label>
                                        <input type="Date" class="form-control" required name="starting" id="str" value="<%=offer.starting%>">
                                        <label class="pt-4">Expiry Date</label>
                                        <input type="Date" class="form-control" required name="expiry" id="exp" value="<%=offer.expiry%>">
                                        <label class="pt-4">Offer Percentage</label>
                                        <input type="number" onkeydown="return event.keyCode !== 69" class="form-control" required name="offer" value="<%=offer.offer%>">


                                    </div>
                                    <br>
                                    <input type="submit" value="   Submit   " id="prosub" class="btn btn-block btn-success float-end">

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>


</section>




<script>
    $("#proSelect").select2({
        placeholder: "Select A Product",
        allowClear: true
    });
</script>

<script>
    $(document).ready(function () {

        let today = new Date()
        var dd = today.getDate();
        var mm = today.getMonth() + 1;

        var yyyy = today.getFullYear();
        if (dd < 10) {
            dd = '0' + dd;
        }
        if (mm < 10) {
            mm = '0' + mm;
        }
        today = yyyy + '-' + mm + '-' + dd;
        $('#str').attr('min', today)
     

        $('#str').change(function () {
            let date = document.getElementById('str').value
            $('#exp').attr('min', date)
         
        })

    })
</script>
</script>
