<%- include('../partials/admin-head') %>
<%- include('../partials/admin-sidebar') %>
<%- include('../partials/admin-navbar') %>
<section>
    <div class="col-12">
        <div style="margin-top: 100px;"></div>
        <div>
            <a href="/admin/add-category" class="btn btn-success float-end mt-4 me-4">Add New Category</a>
        </div>
        <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">Categories</h6>
            <div class="table-responsive">
                <table class="table" id="myTable">
                    <thead>
                        
                        <tr>
                            <th scope="col">Images</th>
                           
                            <th scope="col">Category</th>
                           
                            
                            <th scope="col">Delete</th>
                        </tr>
                        
                    </thead>
                    <tbody>
                        <% categories.forEach((x) => { %>
                        <tr>
                            <td scope="row"><img style="width: 50px; height: 50px;" src="/uploads/<%=x.image%>" alt=""></td>
                            
                            <td><%=x.category %></td>
                            
                            
                            <td><a  href="/admin/delete-category/<%=x._id%>"><i class="bi bi-trash-fill"></i></a></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready( function () {
    $('#myTable').DataTable();
} );
</script>
<%- include('../partials/admin-foot') %>