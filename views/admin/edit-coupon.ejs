<%- include('../partials/admin-head') %>
<%- include('../partials/admin-sidebar') %>
<%- include('../partials/admin-navbar') %>
<section style="margin: auto;padding: auto;" class="col-md-6 col-12" id="add">
    <div class="half">
        <div class="bg order-1 order-md-2" style="background-image: url('/adminLogin/images/bg_1.jpg');"></div>

        <div class="contents order-2 order-md-1">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-12 mb-5 col-12" style="background-color: rgb(255, 255, 255);border-radius: 30px;">
                        <div class="col-md-12 col-12 p-5 " style="margin: auto;">
                            <div class="form-block" id="cat">
                                <div class="text-center mb-5">
                                    <h3>Edit <strong>Coupon</strong></h3>
                                   
                                </div>
                                <form action="/admin/edit-coupon/<%=coupon._id%>" id="productPage" method="post">
                                   
                                    <div class="form-group first">
                                        <label for="category">Coupon code</label>
                                        <input type="text" class="form-control" name="coupon" value="<%=coupon.coupon%>">

                                        <label class="pt-4">Starting Date</label>
                                        <input type="Date" class="form-control" required name="starting" id="str" value="<%=coupon.starting%>">
                                        <label class="pt-4">Expiry Date</label>
                                        <input type="Date" class="form-control" required name="expiry" id="exp" value="<%=coupon.expiry%>">
                                        <label class="pt-4">Limit</label>
                                        <input type="number" class="form-control" required name="limit" id="lmt" min="1" max="20" value="<%=coupon.limit%>">
                                        <label class="pt-4">Coupon Percentage</label>
                                        <input type="text" class="form-control" required min="1" name="offer" max="95" value="<%=coupon.offer%>"
                                            onkeypress="return isNumber(event)">
                                    </div>
                                   <div class="row" style="width: 95%;margin: auto;">
                                    <button id="prosub" type="submit" class="btn  btn-success mt-3 ">Submit</button>
                                   </div>
                                    

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<%- include('../partials/admin-foot') %>