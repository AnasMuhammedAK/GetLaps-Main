<section style="padding-bottom: 100px;">
    <ol class="breadcrumb">
        <li class="pr-3"><a href="/admin" style="text-decoration: none;">Home</a></li>
        <li class="active">/ Edit Category</li>
    </ol>
    
</section>

<section style="margin: auto;background-color: white;border-radius: 30px;" class="border col-md-6 p-5 " id="add">
   
    <div class="half ">
        <div class="bg order-1 order-md-2 " style="background-image: url('/adminLogin/images/bg_1.jpg');"></div>
        <div class="contents order-2 order-md-1 ">
            <div class="container   ">
                <div class="row align-items-center justify-content-center ">
                    <div class="col-md-12 ">
                        <div class="col-md-12 ">
                            <div class="form-block" id="cat">
                                
                                <div class="text-center mb-5">
                                    <h3>Edit Category <strong>Offer</strong></h3>
                                   
                                </div>
                                <form action="/admin/edit-cateOffer/<%=cateOffer._id%>" id="productPage" method="post">
                                   
                                    <div class="form-group first">
                                        <label for="category">Category</label>
                                        
                                        <select class="form-control" name="category" id="category" required>
                                            <option selected value="<%=cateOffer.category %>"><%=cateOffer.category %></option>
                                            <% categories.forEach((x) => { %>
                                            <option><%=x.category %></option>
                                            <% }) %>
                                  
                                  
                                          </select>
                                        <label class="pt-4">Starting Date</label>
                                        <input type="Date" class="form-control" required name="starting" id="str" value="<%=cateOffer.starting%>">
                                        <label class="pt-4">Expiry Date</label>
                                        <input type="Date" class="form-control" required name="expiry" id="exp" value="<%=cateOffer.expiry%>">
                                        <label class="pt-4">Offer Percentage</label>
                                        <input type="text" class="form-control" onkeypress="return isNumber(event)"
                                            required name="offer" min="1" max="95" value="<%=cateOffer.offer%>">
                                    </div>
                                    <input type="submit" value=" Submit " id="catsub" class="btn btn-block btn-success mt-4 ">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


